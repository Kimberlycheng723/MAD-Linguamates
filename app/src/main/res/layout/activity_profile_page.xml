<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/CsLayout_pp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash"
    android:orientation="vertical"
    android:weightSum="1.0">

    <ImageView
        android:id="@+id/iv_dolphin_pp"
        android:layout_width="106dp"
        android:layout_height="112dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="137dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dolphin" />

    <ImageView
        android:id="@+id/iv_statlessons_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_statlang_pp"
        app:layout_constraintTop_toBottomOf="@+id/iv_statleague_pp"
        app:srcCompat="@drawable/stat_rect_pp" />

    <ImageView
        android:id="@+id/iv_statleague_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_statstreak_pp"
        app:layout_constraintTop_toBottomOf="@+id/bt_share_pp"
        app:srcCompat="@drawable/stat_rect_pp" />

    <ImageView
        android:id="@+id/iv_statstreak_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/iv_statlang_pp"
        app:layout_constraintEnd_toStartOf="@+id/iv_statleague_pp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stat_rect_pp" />

    <ImageView
        android:id="@+id/iv_statlang_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_statleague_pp"
        app:srcCompat="@drawable/stat_rect_pp" />

    <TextView
        android:id="@+id/tv_name_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="180dp"
        android:text="win10"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_china_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/china" />

    <Button
        android:id="@+id/bt_share_pp"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="420dp"
        android:background="@drawable/short_rect_pp"
        android:text="S"
        android:textColor="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.204"
        app:layout_constraintStart_toEndOf="@+id/Bt_editProfile" />

    <TextView
        android:id="@+id/tv_bio_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="232dp"
        android:text="this is my bio and my bio is me"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_edit_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/Bt_editProfile"
        app:layout_constraintEnd_toEndOf="@+id/Bt_editProfile"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="@+id/Bt_editProfile"
        app:layout_constraintTop_toTopOf="@+id/Bt_editProfile"
        app:srcCompat="@drawable/editprofile_pp" />

    <TextView
        android:id="@+id/tv_username_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="iwin10s"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_pp" />

    <Button
        android:id="@+id/Bt_editProfile"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="420dp"
        android:background="@drawable/short_rect_pp"
        android:text="E"
        android:textColor="#00000000"
        android:textColorLink="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_addFriend_pp" />

    <TextView
        android:id="@+id/tv_statistics_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Statistics"
        android:textColor="#0D0D0D"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_addFriend_pp" />

    <ImageView
        android:id="@+id/iv_share_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bt_share_pp"
        app:layout_constraintEnd_toEndOf="@+id/bt_share_pp"
        app:layout_constraintStart_toStartOf="@+id/bt_share_pp"
        app:layout_constraintTop_toTopOf="@+id/bt_share_pp"
        app:srcCompat="@drawable/share" />

    <Button
        android:id="@+id/bt_addFriend_pp"
        android:layout_width="213dp"
        android:layout_height="48dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="420dp"
        android:background="@drawable/long_rect_pp"
        android:text="Add Friend"
        android:textColor="#98000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_statlanguage_pp"
        android:layout_width="77dp"
        android:layout_height="25dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="12dp"
        android:text="Languages"
        app:layout_constraintBottom_toBottomOf="@+id/iv_statlang_pp"
        app:layout_constraintEnd_toEndOf="@+id/iv_statlang_pp" />

    <TextView
        android:id="@+id/tv_stat_dayStreak_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="12dp"
        android:text="Day Streak"
        app:layout_constraintBottom_toBottomOf="@+id/iv_statstreak_pp"
        app:layout_constraintEnd_toStartOf="@+id/iv_statleague_pp" />

    <ImageView
        android:id="@+id/iv_streak_pp"
        android:layout_width="28dp"
        android:layout_height="32dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/iv_statstreak_pp"
        app:layout_constraintTop_toTopOf="@+id/iv_statstreak_pp"
        app:srcCompat="@drawable/streakl" />

    <ImageView
        android:id="@+id/iv_language_pp"
        android:layout_width="33dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/iv_statlang_pp"
        app:layout_constraintTop_toTopOf="@+id/iv_statlang_pp"
        app:srcCompat="@drawable/bookmark" />

    <TextView
        android:id="@+id/tv_league_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Current League"
        app:layout_constraintBottom_toTopOf="@+id/iv_statlessons_pp"
        app:layout_constraintEnd_toEndOf="@+id/iv_statleague_pp" />

    <TextView
        android:id="@+id/tv_lessons_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="12dp"
        android:text="Lessons Today"
        app:layout_constraintBottom_toBottomOf="@+id/iv_statlessons_pp"
        app:layout_constraintEnd_toEndOf="@+id/iv_statlessons_pp" />

    <ImageView
        android:id="@+id/iv_rank_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/iv_statleague_pp"
        app:layout_constraintTop_toTopOf="@+id/iv_statleague_pp"
        app:srcCompat="@drawable/ranking" />

    <ImageView
        android:id="@+id/iv_lessons_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/iv_statlessons_pp"
        app:layout_constraintTop_toTopOf="@+id/iv_statlessons_pp"
        app:srcCompat="@drawable/level" />

    <TextView
        android:id="@+id/tv_achievements_pp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="Achievements"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_statlang_pp" />

    <ImageView
        android:id="@+id/iv_achievements_pp"
        android:layout_width="375dp"
        android:layout_height="114dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.62"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/stat_rect_pp" />

    <Button
        android:id="@+id/btn_set_pp"
        android:layout_width="42dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/settings"
        android:text="Button"
        android:textColor="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>