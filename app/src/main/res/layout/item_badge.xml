<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp">

    <!-- Badge Image -->
    <ImageView
        android:id="@+id/badgeImage"
        android:layout_width="100dp"
        android:layout_height="170dp"
        android:scaleType="fitCenter"
        android:src="@drawable/badge_locked" />

    <!-- Badge Name -->
    <TextView
        android:id="@+id/badgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Badge Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Badge Description -->
    <TextView
        android:id="@+id/badgeDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Badge Description"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

    <!-- Badge Status -->
    <TextView
        android:id="@+id/badgeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="In Progress"
        android:textColor="#307CD4"
        android:textStyle="italic"
        android:textSize="14sp"
        android:gravity="center" />
</LinearLayout>
