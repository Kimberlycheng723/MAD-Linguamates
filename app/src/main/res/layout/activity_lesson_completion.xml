<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_background">

    <!-- Firework Left -->

    <!-- Firework Right -->

    <!-- Celebration Image -->

    <ImageView
        android:id="@+id/fireworkLeft"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/firework1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/fireworkRight"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="56dp"
        android:src="@drawable/firework1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/celebrationImage"
        android:layout_width="200dp"
        android:layout_height="249dp"
        android:layout_marginTop="224dp"
        android:src="@drawable/dolphin_graduate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Completion Text -->
    <TextView
        android:id="@+id/completionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Lesson Completed !"
        android:textColor="#307CD4"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/celebrationImage" />

    <!-- Placeholder for Diamond and Score -->
    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/completionText">

        <!-- Diamond Image -->
        <ImageView
            android:id="@+id/diamondImage"
            android:layout_width="52dp"
            android:layout_height="62dp"
            android:src="@drawable/diamond" />

        <!-- Score Text Placeholder -->
        <TextView
            android:id="@+id/scoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="+ 0"
            android:textColor="#307CD4"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Take Quiz Button -->
    <Button
        android:id="@+id/takeQuizButton"
        android:layout_width="344dp"
        android:layout_height="77dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#26ABC7"
        android:fontFamily="@font/quicksand_semibold"
        android:text="Take A Quiz"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scoreContainer" />

    <!-- Back To Home Button -->
    <Button
        android:id="@+id/backToHomeButton"
        android:layout_width="344dp"
        android:layout_height="77dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#26ABC7"
        android:fontFamily="@font/quicksand_semibold"
        android:text="Back To Home"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/takeQuizButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
